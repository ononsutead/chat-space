.wrapper
  .chat-side
    = render 'shared/side_bar'
     
    
  .chat-main
    .main-header
      .main-header__left-box__group-name
        = @group.name
      .main-header__left-box__member-list
        memberï¼š
        = @group.users.pluck(:name).join(",")
            
        
      .main-header__left-box__edit
        = form_for [@group, @message] do |f|
          = link_to edit_group_path(@group) do
            = 'Edit'
    .messages
      = render @messages

    
    = form_for [@group, @message], class: 'form' do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit', id: 'form-submit'







